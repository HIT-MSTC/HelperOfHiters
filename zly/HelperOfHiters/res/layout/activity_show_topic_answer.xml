<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/PostAnswerEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/PostAnswerEdit" >

    </ListView>

    <EditText
        android:id="@+id/PostAnswerEdit"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/PostAnswerButton"
        android:layout_toLeftOf="@+id/PostAnswerButton"
        android:ems="10"
        android:singleLine="false" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/PostAnswerButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="回复" />

</RelativeLayout>